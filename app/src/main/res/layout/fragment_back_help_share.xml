<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >
    
    <com.householdplanner.shoppingapp.views.TextViewRoboto 
        android:id="@+id/textTitleShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        style="@style/textTitleMessage"
        android:text="@string/textTitleShare" />
    
    <com.householdplanner.shoppingapp.views.TextViewRoboto  
        android:id="@+id/text1ShareHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/text1ShareHelp" />
    
    <ImageView android:id="@+id/imageSharingSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/settings_menu" />
    
    <ImageView android:id="@+id/imageGoogleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/google_account" />
        
    <com.householdplanner.shoppingapp.views.TextViewRoboto
        android:id="@+id/text2ShareHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/text2ShareHelp" />

    <ImageView android:id="@+id/imageSharingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/sharing_menu" />
    
</LinearLayout>
