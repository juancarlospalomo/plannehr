<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plannehr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/listItemHeight"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.applilandia.widget.CircleView
        android:id="@+id/imageAvatar"
        android:layout_width="?attr/listPreferredListItemAvatarWidth"
        android:layout_height="?attr/listPreferredListItemAvatarHeight"
        android:paddingBottom="?attr/listPaddingVerticalAvatar"
        android:paddingEnd="?attr/listPaddingHorizontalAvatar"
        android:paddingRight="?attr/listPaddingHorizontalAvatar"
        android:paddingTop="?attr/listPaddingVerticalAvatar"
        plannehr:background="@android:color/black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textProduct"
        style="?android:attr/textViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageSecondaryActionIcon"
        android:layout_width="?attr/touchableAssetLayoutWidth"
        android:layout_height="?attr/touchableAssetLayoutHeight"
        android:layout_gravity="center"
        android:padding="?attr/listPaddingActionIcon"
        android:src="@drawable/ic_navigation_accept" />

</LinearLayout> 