<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ApplilandiaWidget" parent="@android:style/Widget" />

    <style name="ApplilandiaWidget.CircleView">
        <item name="background">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/accent_red</item>
    </style>

    <!-- Validation Field View styles -->
    <style name="ApplilandiaWidget.ValidationField">
        <item name="validationView">?attr/validationView</item>
        <item name="background">@android:color/darker_gray</item>
    </style>

    <style name="ApplilandiaWidget.TextValidationAppearance">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/holo_red_light</item>
    </style>

    <style name="ApplilandiaWidget.ValidationView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?attr/textValidationAppearance</item>
        <item name="android:layout_height">16dp</item>
    </style>

</resources>