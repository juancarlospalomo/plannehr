<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.householdplanner.shoppingapp.MarketListActivity"
    android:gravity="center"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/textImageSelectNoMarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_blue"
        android:gravity="center"
        android:text="@string/textProductsWithoutSupermarket"
        style="@style/textColouredButton"
        android:visibility="gone" />
    
    <LinearLayout android:id="@+id/layoutProductNotSet"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView android:id="@+id/imageCheckShowProductNotSet"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_check_off" />
    
	    <TextView android:id="@+id/textImageCheckShowProductNotSet"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        style="@style/textMessage"
	        android:layout_gravity="center_vertical"
	        android:text="@string/textImageCheckShowProductNotSet"
	        android:onClick="imageCheckShowProductNotSet_onClick" />
        
    </LinearLayout>
    
    <TextView android:id="@+id/textThereAreNotSupermarkets"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/textMessage"
        android:text="@string/textMessageThereAreNotSupermarkets"
        android:visibility="gone" />
    
    <GridView android:id="@+id/gridViewMarkets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:gravity="center"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_marginTop="20dp" />
    
</LinearLayout>
