<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listItemTwoLinesHeight"
    android:background="@drawable/list_row_background"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/layout_primary_action_content"
        android:layout_width="0dp"
        android:layout_height="?attr/listItemTwoLinesHeight"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="?attr/listPreferredItemPaddingTop">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textview_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textview_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/imageSecondaryActionIcon"
        android:layout_width="?attr/touchableAssetLayoutWidth"
        android:layout_height="?attr/touchableAssetLayoutHeight"
        android:layout_gravity="center"
        android:padding="?attr/listPaddingActionIcon" />

</LinearLayout> 