<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_marginTop="@dimen/activity_vertical_margin"
     android:layout_marginRight="@dimen/activity_horizontal_margin"
     android:layout_marginBottom="@dimen/activity_vertical_margin"
     android:layout_marginLeft="@dimen/activity_horizontal_margin"
     android:layout_width="match_parent"
	 android:layout_height="match_parent"
     android:orientation="vertical" >

    <com.householdplanner.shoppingapp.views.TextViewRoboto 
        android:id="@+id/textTitleEnterCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        style="@style/textTitleMessage"
        android:text="@string/textTitleEnterCard" />
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="50dp"
	    android:orientation="horizontal" >
	    
	    <com.householdplanner.shoppingapp.views.TextViewRoboto
	        android:id="@+id/text1EnterProductHelp"
	        android:layout_width="0dp"
	        android:layout_weight="0.25"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:gravity="center"
	        style="@style/textMessage"
	        android:text="@string/text1EnterProductHelp" />
	    
	    <LinearLayout android:id="@+id/layoutEnterProductIcons"
	        android:layout_width="0dp"
	        android:layout_weight="0.5"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:background="@drawable/square_grey_with_border"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <ImageView android:id="@+id/imageMagnifier"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_action_search" />
	        
	        <ImageView android:id="@+id/imageMicrophone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@android:drawable/ic_btn_speak_now" />
	        
	        <ImageView android:id="@+id/imageEnter"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_action_collections_new_label" />
	        
	        <TextView android:id="@+id/textMyProductsDB"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/textFragmentMyProductsTitle" />
         
	    </LinearLayout>
	    
	    <com.householdplanner.shoppingapp.views.TextViewRoboto 
	        android:id="@+id/text2EnterProductHelp"
	        android:layout_width="0dp"
	        android:layout_weight="0.25"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        style="@style/textMessage"
	        android:gravity="center"
	        android:text="@string/text2EnterProductHelp" />
	
	</LinearLayout>

</LinearLayout>