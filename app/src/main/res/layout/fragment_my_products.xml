<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plannehr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMyProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

    <com.applilandia.widget.SnackBar
        android:id="@+id/snackBarMyProducts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/snack_bar_single_line_height"
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/snack_bar_padding"
        android:paddingRight="@dimen/snack_bar_padding"
        plannehr:textAction="@string/text_snack_bar_action" />

</FrameLayout>

