<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
            	<shape>
		            <gradient
		                android:startColor="#B2CCFF"
		                android:endColor="#7076D0"
		                android:angle="90"
		                android:type="linear" />
		            <stroke
		                android:width="1dp"
		                android:color="#7076D0" />
		            <corners
		                android:radius="4dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
        		</shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
	</item>
</selector>
