<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/ApplilandiaThemeWidget.Light">
        <!-- Needed for toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- SearchView Style -->
        <item name="searchViewStyle">@style/Widget.SearchView</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/color_toolbar_background</item>
        <item name="colorAccent">@color/accent_red</item>

        <!-- Text styles -->
        <item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="android:textColorHint">@color/hint_foreground_material_light</item>
        <item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>
        <item name="android:textColorLink">@color/link_text_material_dark</item>
        <!-- Touchable Metrics -->
        <item name="touchableAssetLayoutHeight">@dimen/touchable_grid_metric</item>
        <item name="touchableAssetLayoutWidth">@dimen/touchable_grid_metric</item>
        <!-- List attributes -->
        <item name="listItemHeight">@dimen/list_item_height</item>
        <item name="listItemTwoLinesHeight">@dimen/list_item_two_lines_height</item>
        <item name="listPreferredListItemAvatarHeight">@dimen/list_primary_action_avatar_height
        </item>

        <item name="listPreferredListItemAvatarWidth">@dimen/list_primary_action_avatar_width</item>
        <item name="listPaddingActionIcon">@dimen/padding_action_icon</item>
        <item name="listPreferredItemPaddingLeft">@dimen/list_item_padding_horizontal_material
        </item>
        <item name="listPreferredItemPaddingRight">@dimen/list_item_padding_horizontal_material
        </item>
        <item name="listPaddingHorizontalAvatar">@dimen/list_avatar_horizontal_padding</item>
        <item name="listPaddingVerticalAvatar">@dimen/list_avatar_vertical_padding</item>
        <item name="listItemPaddingTextTop">@dimen/list_item_text_padding_top</item>
        <item name="listPreferredItemPaddingTop">@dimen/list_primary_action_text_padding_top</item>
        <item name="listPreferredItemPaddingBottom">@dimen/list_primary_action_text_padding_bottom
        </item>
        <item name="textAppearanceListItem">@style/AppTheme.TextAppearance.Material.Subhead</item>
        <item name="textAppearanceListItemSecondary">@style/AppTheme.TextAppearance.Material.Body1
        </item>
        <!-- Navigation Drawer -->
        <item name="textDrawerItemColor">@color/text_drawer_item</item>

    </style>

</resources>