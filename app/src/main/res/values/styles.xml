<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Widget" parent="@android:style/Widget" />

    <style name="Widget.ApplilandiaButton" parent="@android:style/Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/accent_red</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">

    </style>

    <!-- Text styles replied from Material Design theme -->

    <style name="AppTheme.ActivityLayout">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="android:TextAppearance" />

    <style name="AppTheme.TextAppearance.Material">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="android:textColorLink">?android:attr/textColorLink</item>
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="fontFamily">@string/font_family_body_1_material</item>
    </style>

    <style name="AppTheme.TextAppearance.Material.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="fontFamily">@string/font_family_subhead_material</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <!-- New attribute to set the padding to text with avatar, text and icon -->
        <item name="android:paddingLeft">@dimen/list_primary_action_text_avatar_text</item>
    </style>

    <style name="AppTheme.TextAppearance.Material.Body1">
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="fontFamily">@string/font_family_body_1_material</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <!-- New attribute to set the padding to text with avatar, text and icon -->
        <item name="android:paddingLeft">@dimen/list_primary_action_text_avatar_text</item>
    </style>

    <!-- Styles for Navigation Drawer -->
    <style name="AppTheme.NavigationDrawerItem">
        <item name="android:paddingRight">@dimen/drawer_item_horizontal_padding</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
    </style>

    <style name="AppTheme.NavigationDrawerItem.IconDrawer">
        <item name="android:layout_marginLeft">@dimen/drawer_item_horizontal_padding</item>
    </style>

    <style name="AppTheme.NavigationDrawerItem.TextDrawerItem">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="fontFamily">@string/font_family_subhead_material</item>
        <item name="android:textColor">?attr/textDrawerItemColor</item>
        <item name="android:paddingLeft">@dimen/drawer_item_text_left_padding</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="textColouredButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="editTextData" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
